# MongoDB Configuration
MONGODB_URL=mongodb://mongodb:27017  # URL for MongoDB connection
MONGO_DB=slack_data                  # Name of MongoDB database

# Ollama Configuration
OLLAMA_URL=http://ollama:11434      # URL for Ollama embedding service

# Chroma Configuration
CHROMA_HOST=chroma                   # Hostname for ChromaDB service
CHROMA_PORT=8000                     # Port for ChromaDB service

# Storage Configuration
DATA_DIR=/app/data                   # Directory for storing Slack data
FILE_STORAGE=/app/file_storage       # Directory for storing uploaded files

# Application Configuration
TEST_MODE=false                      # Set to true to enable test mode
LOG_LEVEL=INFO                       # Logging level (DEBUG, INFO, WARNING, ERROR)
ALLOW_RESET=true                     # Allow resetting of collections
ANONYMIZED_TELEMETRY=true           # Allow anonymous usage telemetry
